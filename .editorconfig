# Top level editorconfig
root = true

[*]
# UTF-8 Encoding
charset = utf-8

# Unix newlines
end_of_line = lf
insert_final_newline = true

tab_width = 4
trim_trailing_whitespace = true

[*.{c,h,py,rs}]
indent_style = tab
indent_size = tab

[{CMakeLists.txt,*.cmake}]
indent_style = tab
indent_size = tab

[*.{xml,htm,html}]
indent_style = space
indent_size = 2

[*.sh]
tab_width = 8
indent_style = tab
indent_size = tab

[*.yml]
indent_style = space
indent_size = 2
